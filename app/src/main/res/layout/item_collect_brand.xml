<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_space"
        style="@style/base_space"
        />
    <LinearLayout
        android:id="@+id/ll_merchant"
        android:background="@drawable/touch_bg"
        style="@style/base_hor_style"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <com.cinderellavip.weight.CircleImageView
            android:id="@+id/merchant_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            tools:src="@mipmap/demo_brand_avater"/>
        <TextView
            android:id="@+id/merchant_name"
            style="@style/base_text_style"
            android:gravity="right"
            tools:text="三只松鼠"
            android:layout_marginLeft="12dp"
            />




    </LinearLayout>

    <View
        android:id="@+id/view_linea"
        style="@style/line_light"
        android:layout_marginLeft="12dp"
        />


</LinearLayout>
