<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_gray50">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_gray50">


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black_title_color"
                android:textColorHint="@color/grayText"
                android:textSize="14sp"/>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_gray50">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/shape_gray50"
            android:hint="短信验证码"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/black_title_color"
            android:textColorHint="@color/grayText"/>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/gray_line"/>


        <TextView
            android:id="@+id/tv_code"
            style="@style/base_text_style"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="获取验证码"/>
    </LinearLayout>



    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/shape_gray50"
        android:hint="密码"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:maxLength="18"
        android:textColor="@color/black_title_color"
        android:textColorHint="@color/grayText"/>


    <LinearLayout
        android:id="@+id/ll_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/click_toolbar_style"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@mipmap/agreement_selete_no"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"

            android:layout_marginLeft="-5dp"
            android:textColor="@color/black_title_color"
            android:text="我已阅读并同意"/>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="《用户注册协议》"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            style="@style/click_toolbar_style"
            android:textColor="@color/baseColor"
            android:textSize="14sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_login"
        style="@style/login_btn_style"
        android:layout_marginTop="30dp"
        android:text="注册"/>


</LinearLayout>
