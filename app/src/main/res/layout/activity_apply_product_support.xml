<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/base_text_style"
                android:padding="12dp"
                android:text="请填写申请信息"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:background="@drawable/shape_gray5">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入您的姓名"
                    android:maxLength="11"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/black_title_color"
                    android:textColorHint="@color/grayText"
                    android:textSize="14sp" />

            </LinearLayout>


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_gray5"
                android:hint="输入您的手机号"
                android:maxLength="11"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black_title_color"
                android:textColorHint="@color/grayText"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_gray5">

                <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入商家名称"
                    android:maxLength="11"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/black_title_color"
                    android:textColorHint="@color/grayText"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:background="@drawable/shape_gray5">

                <TextView
                    android:id="@+id/et_city_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请选择所在城市"
                    android:maxLength="11"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/black_title_color"
                    android:textColorHint="@color/grayText"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_black_icon"/>

            </LinearLayout>



            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="top"
                android:minHeight="120dp"
                android:background="@drawable/shape_gray5"
                android:hint="请输入详细地址"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black_title_color"
                android:textColorHint="@color/grayText"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:background="@drawable/shape_gray5">

                <TextView
                    android:id="@+id/tv_business_category"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请选择经营类别"
                    android:maxLength="11"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/black_title_color"
                    android:textColorHint="@color/grayText"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_black_icon"/>

            </LinearLayout>


            <EditText
                android:id="@+id/et_main_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="top"
                android:minHeight="120dp"
                android:background="@drawable/shape_gray5"
                android:hint="请输入主营产品"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black_title_color"
                android:textColorHint="@color/grayText"
                android:textSize="14sp" />


            <TextView
                style="@style/base_text_style"
                android:padding="12dp"
                android:text="门店照片"
                />

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="12dp">
                <ImageView
                    android:id="@+id/iv_store"
                    android:layout_width="80dp"
                    android:scaleType="centerCrop"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/add_upload_image"/>

                <ImageView
                    android:id="@+id/iv_delete_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@mipmap/cha"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/base_text_style"
                    android:paddingTop="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp"
                    android:text="营业执照"
                    />
                <TextView
                    style="@style/base_text_style_gray_small"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="或个体工商户营业执照"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="12dp">
                <ImageView
                    android:id="@+id/iv_business_license"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/add_upload_image"/>

                <ImageView
                    android:id="@+id/iv_delete_business_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@mipmap/cha"/>
            </RelativeLayout>



            <TextView
                style="@style/base_text_style"
                android:padding="12dp"
                android:text="身份证正反面照片"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    >
                    <ImageView
                        android:id="@+id/iv_id_card_front"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/add_upload_image"/>

                    <ImageView
                        android:id="@+id/iv_delete_id_card_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:src="@mipmap/cha"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="12dp"
                    >
                    <ImageView
                        android:id="@+id/iv_id_card_back"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/add_upload_image"/>


                    <ImageView
                        android:id="@+id/iv_delete_id_card_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:src="@mipmap/cha"/>
                </RelativeLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:src="@mipmap/agreement_selete_no"/>
                <TextView
                    style="@style/base_text_style"
                    android:textSize="12sp"
                    android:text="我已阅读并同意"/>

                <TextView
                    android:id="@+id/tv_register_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/baseColor"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="《商家供货协议》"/>




            </LinearLayout>








        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_login"
        style="@style/login_btn_style"
        android:layout_marginBottom="12dp"
        android:text="提交" />
</LinearLayout>

