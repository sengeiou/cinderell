<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="95dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/my_coupon_wsy_bg"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="516"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/base_text_style"
                    android:textSize="16sp"
                    android:text="新用户专享"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_money_unit"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:text="￥"/>
                    <TextView
                        android:id="@+id/tv_money"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:text="20"/>
                    <TextView
                        android:id="@+id/tv_money_condition"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:background="@drawable/shape_red5_shadow"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="15dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="满200可用"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_complain"
                    style="@style/base_text_style_gray_small"
                    android:layout_marginTop="10dp"
                    android:text="全部商品可用"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="176"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_use"
                style="@style/base_btn_style"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:text="立即领取"/>

            <ImageView
                android:id="@+id/iv_selete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:src="@mipmap/yilingqu"/>

        </LinearLayout>




    </LinearLayout>



</RelativeLayout>


