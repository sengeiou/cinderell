<?xml version="1.0" encoding="utf-8"?>


<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_scrollFlags="scroll"
                android:background="@color/baseColor"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="vertical">

                <TextView
                    style="@style/base_text_style"
                    android:text="我的推荐码"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_mine_code"
                    style="@style/base_text_style"
                    tools:text="876982"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white5"
                    android:padding="4dp"
                    >

                    <ImageView
                        android:id="@+id/iv_code"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        tools:src="@mipmap/code" />
                </LinearLayout>

                <TextView
                    style="@style/base_btn_style_large"
                    android:background="@drawable/shape_white50"
                    android:layout_marginTop="12dp"
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:text="立即邀请好友"
                    android:id="@+id/tv_invite"
                    android:textColor="@color/baseColor"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_total_number"
                    style="@style/base_btn_style"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    tools:text="好友总人数\n2489人"
                    android:textStyle="bold"
                    android:textColor="@color/black_title_color"
                    android:lineSpacingExtra="5dp"
                    android:background="@drawable/shape_line_basecolor50"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                >
                <LinearLayout
                    android:id="@+id/ll_direct"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_direct_number"
                        style="@style/base_text_style"
                        tools:text="490人"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/baseColor"
                        />

                    <TextView
                        style="@style/base_text_style"
                        android:text="直接好友 >"
                        android:layout_marginTop="15dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_indirect_number"
                        style="@style/base_text_style"
                        tools:text="2000人"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/baseColor"
                        />

                    <TextView
                        style="@style/base_text_style"
                        android:text="关联好友"
                        android:layout_marginTop="15dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </LinearLayout>





        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



