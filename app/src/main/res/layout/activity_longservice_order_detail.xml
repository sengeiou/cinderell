<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
           <ImageView
                    android:id="@+id/iv_progress1"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignLeft="@+id/tv_progress1"
                    android:layout_alignRight="@+id/tv_progress1"
                    android:src="@mipmap/progress_left"/>

            <TextView
                android:id="@+id/tv_progress1"
                style="@style/base_text_style"
                android:text="待确认"
                android:textSize="12sp"
                android:layout_below="@+id/iv_progress1"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_marginLeft="-10dp"
            android:background="@color/gray_progress"
            android:layout_marginTop="13dp"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_marginRight="-5dp"
            android:background="@color/gray_progress"
            android:layout_marginTop="13dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_progress2"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignLeft="@+id/tv_progress1"
                android:layout_alignRight="@+id/tv_progress1"
                android:src="@mipmap/progress_center"/>

            <TextView
                android:id="@+id/tv_progress2"
                style="@style/base_text_style"
                android:text="签约"
                android:textSize="12sp"
                android:layout_below="@+id/iv_progress1"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_marginLeft="-5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="@color/gray_progress"
            android:layout_marginTop="13dp"
            />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="@color/gray_progress"
            android:layout_marginTop="13dp"
            android:layout_marginRight="-5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_progress3"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignLeft="@+id/tv_progress1"
                android:layout_alignRight="@+id/tv_progress1"
                android:src="@mipmap/progress_center"/>

            <TextView
                android:id="@+id/tv_progress3"
                style="@style/base_text_style"
                android:text="服务中"
                android:textSize="12sp"
                android:layout_below="@+id/iv_progress1"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_marginLeft="-5dp"
            android:background="@color/gray_progress"
            android:layout_marginTop="13dp"
            />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_marginRight="-10dp"
            android:background="@color/gray_progress"
            android:layout_marginTop="13dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_progress4"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignLeft="@+id/tv_progress1"
                android:layout_alignRight="@+id/tv_progress1"
                android:src="@mipmap/progress_right"/>

            <TextView
                android:id="@+id/tv_progress4"
                style="@style/base_text_style"
                android:text="已完成"
                android:textSize="12sp"
                android:layout_below="@+id/iv_progress1"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>


    </LinearLayout>


    <View
        style="@style/base_space"/>


    <TextView
        style="@style/base_text_style"
        android:text="订单信息"
        android:padding="12dp"
        android:textColor="@color/black"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="服务编号：20022115611032156165"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="服务类型：日常保洁-物品清理"
        android:layout_marginTop="6dp"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="服务时间：2019-12-28 11:00"
        android:layout_marginTop="6dp"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="服务要求："
        android:layout_marginTop="6dp"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:lineSpacingExtra="3dp"
        android:text="我需要一个技术过硬，不恐高的专业清洗人员，需要准时过来清洗，工作认真负责，认真负责，能够无死角的清洗门窗。"
        android:layout_marginTop="6dp"
        />

    <View
        style="@style/line_light"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />


    <TextView
        style="@style/base_text_style"
        android:text="服务信息"
        android:padding="12dp"
        android:textColor="@color/black"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="服务城市：上海-上海市"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="服务地市：华徐公路888号中国梦古1号楼2楼"
        android:layout_marginTop="6dp"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="联系电话：13166015580"
        android:layout_marginTop="6dp"
        />

    <TextView
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:text="联系人：王明"
        android:layout_marginTop="6dp"
        />



    <View
        style="@style/line_light"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />

            <TextView
                style="@style/base_text_style"
                android:text="合同信息"
                android:padding="12dp"
                android:textColor="@color/black"
                />

            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:text="合同编号：ASJBFKJSBFJBHKAFHJS"
                />

            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:text="合同起始时间：2020-01-01~2020-01-31"
                android:layout_marginTop="6dp"
                />


            <TextView
                android:id="@+id/tv_look"
                style="@style/base_btn_style"
                android:layout_marginTop="12dp"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_line_gray5"
                android:textColor="@color/black_title_color"
                android:text="查看电子合同" />

            <View
                style="@style/line_light"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/base_text_style"
                    android:text="订单费用"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_cost_explain"
                    style="@style/base_text_style"
                    android:text="订单说明"
                    android:padding="12dp"
                    android:textSize="12sp"
                    android:textColor="@color/yellow_deep"
                    />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/base_text_style"
            android:layout_weight="1"
            android:text="应付总金额："
            />
        <TextView
            style="@style/base_text_style"
            android:text="3000元"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/base_text_style"
            android:layout_weight="1"
            android:text="已付总金额："
            />
        <TextView
            style="@style/base_text_style"
            android:text="0元"
            />
    </LinearLayout>




            <View
                style="@style/base_space"
                android:layout_weight="1"/>









        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:id="@+id/ll_bottom"
        style="@style/base_hor_style"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        >



        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_btn1"
            style="@style/base_btn_style"
            android:background="@drawable/shape_line_gray5"
            android:textColor="@color/black_title_color"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_btn2"
            style="@style/base_btn_style"
            android:background="@drawable/shape_line_life_yellow_deep5"
            android:textColor="@color/yellow_deep"
            android:layout_marginLeft="12dp"
            android:text="支付" />
    </LinearLayout>
</LinearLayout>
