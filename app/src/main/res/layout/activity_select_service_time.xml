<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_bg"
    android:orientation="vertical">







        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:tabIndicatorColor="@color/yellow_deep"
            app:tabTextColor="@color/black_title_color"
            app:tabSelectedTextColor="@color/yellow_deep"
            app:tabIndicatorFullWidth="false"
            android:background="@color/white"
            app:tabMode="scrollable"
            />




   <androidx.viewpager.widget.ViewPager
       android:id="@+id/viewpager"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"/>


    <TextView
        style="@style/base_text_style"
        android:text="说明：灰色代表不可预约，白色代表可预约"
        android:layout_margin="20dp"
        android:textSize="12sp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:padding="10dp"
            style="@style/life_base_btn"
            android:text="确认选择"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


</LinearLayout>
