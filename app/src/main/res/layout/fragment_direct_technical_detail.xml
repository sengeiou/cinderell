<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:orientation="vertical">

            <include
                layout="@layout/layout_graphic_and_text"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:text="王孟云"
                    style="@style/base_text_style"/>


                <TextView
                    style="@style/base_text_style"
                    android:text="今日可约"
                    android:layout_marginLeft="12dp"
                    android:textSize="10sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_line_life_yellow_deep5"
                    android:textColor="@color/yellow_deep"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingLeft="12dp"
                android:orientation="horizontal">



                <TextView
                    android:text="实名认证"
                    android:drawableLeft="@mipmap/yirenzheng"
                    android:drawablePadding="5dp"
                    android:textSize="10sp"
                    style="@style/base_text_style_gray_small"/>

                <TextView
                    android:text="健康认证"
                    android:drawableLeft="@mipmap/yirenzheng"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="10sp"
                    style="@style/base_text_style_gray_small"/>


                <TextView
                    android:text="资格认证"
                    android:drawableLeft="@mipmap/yirenzheng"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="10sp"
                    style="@style/base_text_style_gray_small"/>




            </LinearLayout>


            <TextView
                android:text="正规绿色服务！从业八年，持有高级按摩技师证，手法柔软、舒适、熟练、擅长经络疏通和经络spa。"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:lineSpacingExtra="3dp"
                android:paddingRight="12dp"
                style="@style/base_text_style_gray_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal">



                <TextView
                    android:text="出发地点："
                    android:textColor="@color/black_title_color"
                    style="@style/base_text_style_gray_small"/>

                <TextView
                    android:text="闵行区西郊花园"
                    android:layout_weight="1"
                    style="@style/base_text_style_gray_small"/>



                <TextView
                    style="@style/base_text_style_gray_small"
                    android:text="1.6km"
                    android:drawableLeft="@mipmap/address_direct"
                    android:drawablePadding="2dp"
                    />




            </LinearLayout>

            <View
                style="@style/base_space"
                />

            <LinearLayout
                android:id="@+id/ll_comment"
                android:background="@drawable/touch_bg"
                style="@style/base_hor_style">
                <TextView
                    android:id="@+id/tv_comment_number"
                    style="@style/base_text_style"
                    android:text="对TA的评价"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_black_icon"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <View
                style="@style/base_space"
                />

            <LinearLayout
                android:background="@drawable/touch_bg"
                style="@style/base_hor_style">
                <TextView
                    style="@style/base_text_style"
                    android:text="TA的服务项目"
                    android:layout_weight="1"/>


                <TextView
                    style="@style/base_text_style"
                    android:text="最早可约"
                    android:textSize="12sp"
                    />

                <TextView
                    style="@style/base_text_style"
                    android:text="今日 16:30"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/yellow_deep"
                    android:textSize="12sp"
                    />




            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <View
                style="@style/base_space"
                />

            <LinearLayout
                android:background="@drawable/touch_bg"
                style="@style/base_hor_style">
                <TextView
                    style="@style/base_text_style"
                    android:text="TA的服务套餐"
                    android:layout_weight="1"/>

                <TextView
                    style="@style/base_text_style"
                    android:text="最早可约"
                    android:textSize="12sp"
                    />

                <TextView
                    style="@style/base_text_style"
                    android:text="今日 16:30"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/yellow_deep"
                    android:textSize="12sp"
                    />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/title"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior=".weight.behavior.TechnicalDetailTitleBehavior"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp"
            >
            <ImageView
                android:id="@+id/view_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_technical"
                android:layout_centerVertical="true"
                style="@style/click_toolbar_style"
                />

            <TextView
                android:id="@+id/tv_technical_title"
                style="@style/base_text_style"
                android:textColor="#00000000"
                android:layout_height="wrap_content"
                android:text="技师详情"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"/>





        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>
