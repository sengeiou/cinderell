<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:popupTheme="@style/AppTheme.PopupOverlay">



        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray50"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_search_black"/>

            <EditText
                android:id="@+id/et_search"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="搜索关键字"
                android:textSize="12sp"
                android:textColorHint="@color/grayText"
                android:textColor="@color/black_title_color"
                android:layout_gravity="center_vertical"
                android:background="@null"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_title_color"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_vertical"
            android:text="取消"
            style="@style/click_toolbar_style"
            />




    </LinearLayout>




    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        app:tabIndicatorColor="@color/baseColor"
        app:tabTextColor="@color/black_title_color"
        app:tabSelectedTextColor="@color/baseColor"
        style="@style/MyTablayoutstyle"
        app:tabIndicatorFullWidth="false"
        />

    <View
        style="@style/line_light"
        />




    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>





</LinearLayout>
