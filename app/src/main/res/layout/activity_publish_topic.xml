<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/white"
        >


        <LinearLayout
            style="@style/base_hor_style_input"
            >



            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="标题（5~30个字）"
                android:inputType="text"
                android:maxLength="30"
                android:textSize="14sp"
                android:textColor="@color/black_title_color"
                android:gravity="top"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />



        </LinearLayout>

        <View
            style="@style/line_light"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />


        <LinearLayout
            style="@style/base_hor_style_input"
            >


            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="详细描述（1000个字以内）"
                android:minHeight="100dp"
                android:maxLength="1000"
                android:textSize="14sp"
                android:textColor="@color/black_title_color"
                android:gravity="top"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_add_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_image_upload"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray_bg"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sava"
                android:layout_width="match_parent"
                style="@style/base_btn_style_large"
                android:background="@color/baseColor"
                android:text="发布"
                android:layout_alignParentBottom="true"
                android:padding="14dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>

