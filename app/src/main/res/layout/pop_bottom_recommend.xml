<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ll_poster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_bg"
        android:layout_weight="1"
        android:padding="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.cinderellavip.weight.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/avater"/>
            <TextView
                android:id="@+id/tv_name"
                style="@style/base_text_style"
                android:text="月岛tsuki"
                android:layout_marginLeft="10dp"
                />
            <TextView
                style="@style/base_text_style"
                android:text="邀您加入灰姑娘"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white5"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">
            <com.cinderellavip.weight.SquareImageView
                android:id="@+id/iv_image"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/code"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/base_text_style"
                    android:text="推荐码"
                    />

                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/base_text_style"
                    android:text="245523"
                    android:textSize="18sp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_copy_code"
                style="@style/base_text_style"
                android:text="复制推荐码"
                android:layout_marginTop="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/shape_line_gray50"
                android:textSize="12sp"
                />

        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_down_icon" />
        <ImageView
            android:id="@+id/iv_weChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_yxhy_icon"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/iv_weChat_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_pyq_icon"
            android:layout_marginLeft="50dp"/>





    </LinearLayout>

    </LinearLayout>








</RelativeLayout>