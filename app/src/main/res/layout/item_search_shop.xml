<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:id="@+id/ll_root"
        android:gravity="center_vertical"
        android:background="@drawable/shape_white5"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <com.cinderellavip.weight.RoundImageView
            android:id="@+id/iv_product"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@mipmap/demo_product_banner"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="1dp"
            android:layout_height="wrap_content"
            tools:text="BLNMAX/邦玛仕手电专营"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black_title_color"/>

        <TextView
            android:id="@+id/tv_status"
            style="@style/base_btn_style"
            android:background="@drawable/shape_line_red50"
            android:textColor="@color/red"
            android:text="进店"
            android:layout_gravity="left"
            android:layout_marginTop="6dp"
            />



    </LinearLayout>



</LinearLayout>


</LinearLayout>
