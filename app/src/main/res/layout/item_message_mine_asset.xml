<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_root"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        style="@style/base_text_style_gray_small"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:text="10:00"
        />

    <LinearLayout
        android:id="@+id/ll_merchant"
        android:background="@drawable/shape_white5"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        style="@style/base_hor_style"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_name"
            style="@style/base_text_style"
            android:layout_weight="1"
            android:text="南殊黎"
            android:padding="12dp"
            />

        <View
            style="@style/line_light"
            />

        <TextView
            style="@style/base_text_style_gray_small"
            android:layout_weight="1"
            android:text="您有一张价值20元的优惠券"
            android:padding="12dp"
            />



    </LinearLayout>




</LinearLayout>
