<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_root"
                android:background="@drawable/shape_white5"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/base_text_style"
                            android:text="李逸"/>


                        <TextView
                            android:id="@+id/tv_phone"
                            style="@style/base_text_style"
                            android:layout_marginLeft="12dp"
                            android:text="131****5579"/>

                        <TextView
                            android:id="@+id/tv_default_status"
                            style="@style/base_btn_style"
                            android:text="默认"
                            android:textSize="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_marginLeft="12dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_id_number"
                        style="@style/base_text_style"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:text="身份证号：3208**********4876"/>

                    <TextView
                        android:id="@+id/tv_detail_address"
                        style="@style/base_text_style"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:text="上海 上海市 青浦区 华徐公路888号1号楼2楼ipd"/>

                </LinearLayout>



                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/address_edit"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical"/>










            </LinearLayout>

            <View
                android:id="@+id/tv_default_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@mipmap/addr_line"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_selete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ddxz"/>

    </RelativeLayout>







</LinearLayout>
