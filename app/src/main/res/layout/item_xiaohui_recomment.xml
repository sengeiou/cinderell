<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <com.cinderellavip.weight.CircleImageView
            android:id="@+id/iv_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@mipmap/avater"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/base_text_style"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            tools:text="倾国倾城的凤姐"
            />

        <TextView
            style="@style/base_text_style_gray_small"
            android:layout_marginLeft="12dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:text="收益:"
            />

        <TextView
            android:id="@+id/tv_money"
            style="@style/base_text_style_gray_small"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black_title_color"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            tools:text="+200"
            />


    </LinearLayout>



    <View
        android:id="@+id/view_linea"
        style="@style/line_light"
        android:layout_marginTop="10dp"
        />


</LinearLayout>
