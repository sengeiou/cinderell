<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_bg"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ll_coupon"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            style="@style/base_space"
            />

        <LinearLayout
            android:id="@+id/ll_service_coupon"
            style="@style/base_hor_style_input"
            >
            <TextView
                style="@style/base_text_style"
                android:text="优惠券"
                />
            <TextView
                android:id="@+id/tv_service_coupon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请选择"
                android:textSize="14sp"
                android:textColor="@color/black_title_color"
                android:gravity="right"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                tools:text=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_black_icon"
                android:layout_gravity="center_vertical"/>



        </LinearLayout>

        <View
            style="@style/base_space"
            />
    </LinearLayout>


    <LinearLayout
        style="@style/base_hor_style_input"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        >
        <TextView
            style="@style/base_text_style"
            android:text="订单金额"
            />
        <TextView
            android:id="@+id/tv_order_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="12sp"
            android:textColor="@color/black_title_color"
            android:gravity="right"
            tools:text="170元"/>


    </LinearLayout>

    <LinearLayout
        style="@style/base_hor_style_input"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        >
        <TextView
            style="@style/base_text_style"
            android:text="优惠金额"
            />
        <TextView
            android:id="@+id/tv_coupon_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="-0元"
            android:textSize="12sp"
            android:textColor="@color/black_title_color"
            android:gravity="right"
            />


    </LinearLayout>

    <LinearLayout
        style="@style/base_hor_style_input"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            style="@style/base_text_style"
            android:text="实付金额"
            />
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="170元"
            android:textSize="12sp"
            android:textColor="@color/yellow_deep"
            android:gravity="right"
            />


    </LinearLayout>

    <include
        layout="@layout/layout_recharge_service"/>



    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:padding="10dp"
            style="@style/life_base_btn"
            android:text="立即支付"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


</LinearLayout>
