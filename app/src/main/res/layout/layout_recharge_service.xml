<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">






    <LinearLayout
        android:id="@+id/ll_pay_wechat"
        android:gravity="center_vertical"
        style="@style/base_hor_style">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_wechat1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="微信支付" />

            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="推荐安装微信5.0以上用户使用"
                android:layout_marginTop="4dp"
                android:textColor="@color/grayText"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pay_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/service_agreement_default" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_ali"
        android:gravity="center_vertical"
        style="@style/base_hor_style">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_alipay1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="支付宝支付" />

            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="推荐有支付宝账户的用户使用"
                android:layout_marginTop="4dp"
                android:textColor="@color/grayText"/>
        </LinearLayout>



        <ImageView
            android:id="@+id/iv_pay_ali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/service_agreement_default" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_pay_balance"
        android:gravity="center_vertical"
        style="@style/base_hor_style">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_balance1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="余额支付" />

            <TextView
                style="@style/base_text_style"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="推荐现金余额的用户使用"
                android:layout_marginTop="4dp"
                android:textColor="@color/grayText"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_balance"
            style="@style/base_text_style_gray_small"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="" />

        <ImageView
            android:id="@+id/iv_pay_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/service_agreement_default" />

    </LinearLayout>


</LinearLayout>


