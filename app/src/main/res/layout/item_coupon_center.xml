<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="100dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/lqzxbj"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="22"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/base_text_style"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:text="欧莱雅优惠券"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_money_unit"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:text="￥"/>
                    <TextView
                        android:id="@+id/tv_money"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:text="20"/>

                    <TextView
                        android:id="@+id/tv_meet_money"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:background="@drawable/shape_yellow5"
                        android:text="满200可用"
                        android:textSize="12sp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="12dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_complain"
                    style="@style/base_text_style_gray_small"
                    android:text="全部商品可用"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <ImageView
                    android:id="@+id/iv_status"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/lqzx2"/>


            <TextView
                android:id="@+id/tv_use"
                style="@style/base_btn_style"
                android:paddingTop="3dp"
                android:layout_gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:text="立刻领取"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>


