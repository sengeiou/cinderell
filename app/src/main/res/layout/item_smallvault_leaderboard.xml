<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"

    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <View
            style="@style/base_space"
            />
        <LinearLayout
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_header_time1"
                    style="@style/base_text_style"
                    android:maxLines="1"
                    android:lines="1"
                    android:ellipsize="end"
                    tools:text="2019年11月排行"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_header_time2"
                style="@style/base_text_style_gray_small"
                android:layout_marginLeft="12dp"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                tools:text="截止时间：2019-11-30"
                />


        </LinearLayout>

    </LinearLayout>



    <View
        android:id="@+id/view_linea"
        style="@style/line_light"
        />

    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/iv_rank_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_rank_first"/>

        <TextView
            android:id="@+id/tv_rank_text"
            style="@style/base_text_style"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:text="1"
            />

        <com.cinderellavip.weight.CircleImageView
            android:id="@+id/iv_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            tools:src="@mipmap/avater"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                style="@style/base_text_style"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                tools:text="001舰队"
                />

        </LinearLayout>


        <TextView
            style="@style/base_text_style_gray_small"
            android:layout_marginLeft="12dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:text="公主收益："
            />

        <TextView
            android:id="@+id/tv_number"
            style="@style/base_text_style_gray_small"
            android:layout_marginLeft="12dp"
            android:textColor="@color/baseColor"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            tools:text="+200"
            />


    </LinearLayout>






</LinearLayout>
