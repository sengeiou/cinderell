<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/gray_bg">

    <LinearLayout
        android:id="@+id/ll_avatar"
        android:layout_marginTop="8dp"
        style="@style/base_hor_style"
        >

        <TextView
            style="@style/base_text_style"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="头像"/>

        <com.cinderellavip.weight.CircleImageView
            android:id="@+id/iv_avater"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/avatar_default"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_black_icon"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        style="@style/base_space"
        />
    <LinearLayout
        android:id="@+id/ll_nickname"
        style="@style/base_hor_style">

        <TextView
            style="@style/base_text_style"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="昵称"/>

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/base_text_style"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayText"
            tools:text="Windir" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_black_icon"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>



    </LinearLayout>
    <View
        style="@style/line_light"
        />
    <LinearLayout
        android:id="@+id/ll_sex"
        style="@style/base_hor_style">

        <TextView
            style="@style/base_text_style"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="性别"/>

        <TextView
            android:id="@+id/tv_sex"
            style="@style/base_text_style"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayText"
            tools:text="灰姑娘"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_black_icon"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>





    </LinearLayout>
    <View
        style="@style/line_light"
        />
    <LinearLayout
        style="@style/base_hor_style">

        <TextView
            style="@style/base_text_style"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="手机号"/>

        <TextView
            android:id="@+id/tv_phone"
            style="@style/base_text_style"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayText"
            tools:text="18321836627" />


    </LinearLayout>






</LinearLayout>