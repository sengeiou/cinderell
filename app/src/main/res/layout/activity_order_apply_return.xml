<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reason"
               style="@style/base_hor_style"
                android:layout_marginTop="8dp">

                <TextView
                    style="@style/base_text_style"
                    android:text="退款原因"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_reason"
                    style="@style/base_text_style"
                    android:hint="请选择"
                    android:textColorHint="@color/grayText"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_black_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>


            <LinearLayout
                style="@style/base_hor_style"
                android:layout_marginTop="8dp">

                <TextView
                    style="@style/base_text_style"
                    android:text="申请数量"
                    android:layout_weight="1"
                    />


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_gray50">

                    <ImageView
                        android:id="@+id/iv_reduce"
                        android:layout_width="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/cart_reduce"/>

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/black_title_color"/>


                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="30dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/cart_add"/>
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:orientation="vertical">

                <View
                    style="@style/base_space"
                    />

                <TextView
                    style="@style/base_text_style"
                    android:text="问题描述"
                    android:padding="12dp"
                    android:orientation="horizontal"/>


                <EditText
                    android:id="@+id/et_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请描述您的退货原因，以便我们更好的核实~（500字以内!）"
                    android:textSize="12sp"
                    android:background="@null"
                    android:padding="12dp"
                    android:minHeight="80dp"
                    android:gravity="top"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="12dp"/>
                </LinearLayout>











            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/base_text_style"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="申请退款说明"
                    />

                <TextView
                    android:id="@+id/tv_return_explain"
                    style="@style/base_text_style_gray_small"
                    android:lineSpacingExtra="5dp"
                    android:padding="12dp"
                    android:gravity="bottom"
                    android:text="审核通过后，系统会在1个工作日内退回至钱包\n住：优惠券和积分，不退还用户"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_kefu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/touch_bg"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <TextView
                    style="@style/base_text_style"
                    android:padding="12dp"
                    android:text="联系客服"
                    android:layout_width="match_parent"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/base_text_style_gray_small"
                                android:lineSpacingExtra="3dp"
                                android:paddingLeft="12dp"
                                android:text="客服电话："
                                />

                            <TextView
                                style="@style/base_text_style_gray_small"
                                android:lineSpacingExtra="3dp"
                                android:paddingLeft="12dp"
                                android:text="13641869403"
                                android:textColor="@color/baseColor"
                                />
                        </LinearLayout>


                        <TextView
                            style="@style/base_text_style_gray_small"
                            android:lineSpacingExtra="3dp"
                            android:paddingLeft="12dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="12dp"
                            android:text="上午9:00~下午18:00"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_call"
                        style="@style/base_btn_style"
                        android:background="@drawable/shape_line_gray50"
                        android:textColor="@color/black_title_color"
                        android:text="拨打"
                        android:layout_gravity="top"
                        android:layout_marginRight="12dp"
                        />
                </LinearLayout>




            </LinearLayout>



        </LinearLayout>

    </ScrollView>




    <TextView
        android:id="@+id/tv_login"
        style="@style/login_btn_style"
        android:layout_marginBottom="15dp"
        android:text="立即申请"/>




</LinearLayout>
