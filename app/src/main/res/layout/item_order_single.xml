<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:id="@+id/ll_root"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="服务编号:1483759861938"
            android:textSize="12sp"
            android:textColor="@color/black_title_color"/>
        

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/tv_status"
            style="@style/base_text_style"
            android:layout_marginLeft="12dp"
            tools:text="已取消"
            android:textSize="12sp"
            android:textColor="@color/yellow_deep"
            />
    </LinearLayout>

    <View
        style="@style/line_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

       <ImageView
           android:id="@+id/iv_image"
           android:layout_width="40dp"
           android:layout_height="40dp"
           tools:src="@mipmap/life_banner1"/>
        <TextView
            android:id="@+id/tv_type"
            style="@style/base_text_style"
            android:layout_marginLeft="12dp"
            tools:text="育儿嫂"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_service_type"
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        tools:text="服务类型：育儿嫂-启蒙教育"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_service_time"
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        tools:text="服务时间：2020-10-03"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/tv_service_address"
        style="@style/base_text_style"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        tools:text="服务地址：上海市青浦区明珠路32号" />

    <LinearLayout
        style="@style/base_hor_style"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/base_text_style"
            android:text="订单费用："
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_price"
            style="@style/base_text_style"
            tools:text="8000元"
            android:layout_marginLeft="5dp"
            android:textColor="@color/yellow_deep"
            />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_btn1"
            style="@style/base_btn_style"
            android:background="@drawable/shape_line_gray5"
            android:textColor="@color/black_title_color"
            android:textSize="10sp"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_btn2"
            style="@style/base_btn_style"
            android:background="@drawable/shape_line_life_yellow_deep5"
            android:textColor="@color/yellow_deep"
            android:layout_marginLeft="12dp"
            android:textSize="10sp"
            android:text="支付" />
    </LinearLayout>



</LinearLayout>
