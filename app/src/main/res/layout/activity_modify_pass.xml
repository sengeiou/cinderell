<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white">

        <TextView
            style="@style/base_text_style"
            android:text="原密码"/>

        <EditText
            android:id="@+id/et_pass_advance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入原登录密码"
            android:inputType="text"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_title_color"
            android:textColorHint="@color/grayText"
            android:textSize="14sp" />



    </LinearLayout>

    <View
        style="@style/line_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white">

        <TextView
            style="@style/base_text_style"
            android:text="新密码"/>

        <EditText
            android:id="@+id/et_pass_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入新登录密码"
            android:inputType="text"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_title_color"
            android:textColorHint="@color/grayText"
            android:textSize="14sp" />



    </LinearLayout>

    <View
        style="@style/line_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white">

        <TextView
            style="@style/base_text_style"
            android:text="确认密码"/>

        <EditText
            android:id="@+id/et_pass_new_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="再次输入新登录密码"
            android:inputType="text"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_title_color"
            android:textColorHint="@color/grayText"
            android:textSize="14sp" />



    </LinearLayout>

    <View
        style="@style/line_light"
        />









    <TextView
        android:id="@+id/tv_login"
        style="@style/login_btn_style"
        android:layout_marginTop="30dp"
        android:text="确定" />






</LinearLayout>
