<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_outside_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl_inputdlg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray5">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="添加一条评论"
                android:maxLength="500"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="8dp"
                android:maxLines="3"
                android:textColorHint="@color/grayText"
                android:textColor="@color/black_title_color"
                android:textSize="14sp" />

        </LinearLayout>




        <TextView
            android:id="@+id/tv_send"
            style="@style/base_btn_style"
            android:background="@drawable/shape_gray5_cccccc"
            android:text="发送"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />



    </LinearLayout>


</RelativeLayout>