<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/shape_white5"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用说明"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:textColor="@color/black_title_color"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:lineSpacingExtra="5dp"
            android:text="长期订单费用=首期金额（包含押金）+每月金额*月数\n\n首期金额=月工资+月工资*押金百分比*剩余月数\n比如：六个月的服务周期，月工资2000，押金20%；\n结果就是2000+2000*20%*5=4000；
\n注意：押金服务周期结束后，会自动退还到您的钱包余额中。"
            android:textSize="14sp"
            android:textColor="@color/black_title_color"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="我知道了"
                android:gravity="center"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/shape_yellow50_life_deep"
                android:textColor="@color/white"
                />



        </LinearLayout>
    </LinearLayout>





</RelativeLayout>