<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:background="@mipmap/my_coupon_red_bg"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="100dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="219"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_money_unit"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:text="￥"/>
                    <TextView
                        android:id="@+id/tv_money"
                        style="@style/base_text_style_gray_small"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:text="20"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_complain"
                    style="@style/base_text_style_gray_small"
                    android:textColor="@color/red"
                    android:layout_marginTop="20dp"
                    android:text="满$500可用"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="491"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/base_text_style"
                android:textSize="16sp"
                android:text="欧莱雅优惠券"
                />
            <TextView
                android:id="@+id/tv_time"
                style="@style/base_text_style"
                android:textSize="12sp"
                android:text="有效期：2018.06.05-2019.08.15"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_type"
                    style="@style/base_text_style_gray_small"
                    android:layout_weight="1"
                    android:text="全部商品可用"/>
                <TextView
                    android:id="@+id/tv_use"
                    style="@style/base_btn_style"
                    android:text="去使用"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_selete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@mipmap/ddxz"/>

</RelativeLayout>


