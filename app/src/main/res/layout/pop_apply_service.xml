<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@mipmap/bg_apply_sueecss"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="申请劳务用户"
                android:textColor="@color/white"
                android:layout_weight="120"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="370">


            <TextView
                style="@style/base_text_style_gray_small"
                android:text="下载小灰服务APP"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_title_color"
                />

            <TextView
                style="@style/base_text_style_gray_small"
                android:text="下载小灰服务APP，按提示操作即可完成申请，开启您的幸福之旅。"
                android:layout_margin="20dp"
                android:lineSpacingExtra="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/grayText"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="100dp"
                        android:background="@drawable/shape_line_gray50"
                        android:textColor="@color/grayText"
                        style="@style/base_btn_style_large"
                        android:text="取消"
                        android:layout_centerInParent="true"
                        />
                    
                    <TextView
                        android:id="@+id/tv_commit"
                        style="@style/base_btn_style_large"
                        android:text="立即下载"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="100dp"
                        android:layout_centerInParent="true"
                        />
                </LinearLayout>

            </LinearLayout>






        </LinearLayout>

    </LinearLayout>



</LinearLayout>