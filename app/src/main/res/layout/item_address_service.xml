<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_root"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/address_service"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/base_text_style"
                        android:text="上海涵予信息科技有限公司"/>

                    <TextView
                        android:id="@+id/tv_default_status"
                        style="@style/base_btn_style"
                        android:background="@drawable/shape_blue50"
                        android:text="默认"
                        android:textSize="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginLeft="12dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_id_number"
                    style="@style/base_text_style_gray_small"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:text="上海市青浦徐华徐公路888号 1号楼2楼IPD"/>

                <TextView
                    android:id="@+id/tv_detail_address"
                    style="@style/base_text_style_gray_small"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:text="荀先生 13132153153"/>

            </LinearLayout>



            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/service_address_edit"
                android:padding="12dp"
                android:layout_gravity="center_vertical"/>










        </LinearLayout>

       <View
           style="@style/line_light"
           android:layout_marginLeft="12dp"
           android:layout_marginRight="12dp"
           />




</LinearLayout>
